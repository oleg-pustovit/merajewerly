      "default": 16
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link color",
      "default": "#000F9F"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "separator_color",
