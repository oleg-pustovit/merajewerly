{% doc %}
  @prompt
    Product badges, Great, but make the badges without position absolute and in a parent element with flex
    

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-badge-wrapper-{{ ai_gen_id }} {
    display: flex;
    justify-content: {{ block.settings.horizontal_alignment }};
    align-items: {{ block.settings.vertical_alignment }};
    width: 100%;
    padding: {{ block.settings.badge_margin }}px;
  }

  .ai-product-badge-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    
    {% if block.settings.badge_style == 'circle' %}
      width: {{ block.settings.badge_size }}px;
      height: {{ block.settings.badge_size }}px;
      border-radius: 50%;
    {% elsif block.settings.badge_style == 'square' %}
      width: {{ block.settings.badge_size }}px;
      height: {{ block.settings.badge_size }}px;
      border-radius: {{ block.settings.badge_border_radius }}px;
    {% else %}
      padding: {{ block.settings.badge_padding }}px {{ block.settings.badge_padding | times: 1.5 }}px;
      border-radius: {{ block.settings.badge_border_radius }}px;
    {% endif %}
    
    background-color: {{ block.settings.badge_background_color }};
    {% if block.settings.show_badge_border %}
      border: {{ block.settings.badge_border_width }}px solid {{ block.settings.badge_border_color }};
    {% endif %}
    box-shadow: {% if block.settings.show_badge_shadow %}0 2px 5px rgba(0,0,0,0.2){% else %}none{% endif %};
  }

  .ai-product-badge-text-{{ ai_gen_id }} {
    color: {{ block.settings.badge_text_color }};
    font-size: {{ block.settings.badge_font_size }}px;
    font-weight: {{ block.settings.badge_font_weight }};
    line-height: 1.2;
    {% if block.settings.badge_text_transform == 'uppercase' %}
      text-transform: uppercase;
    {% elsif block.settings.badge_text_transform == 'lowercase' %}
      text-transform: lowercase;
    {% elsif block.settings.badge_text_transform == 'capitalize' %}
      text-transform: capitalize;
    {% endif %}
    {% if block.settings.badge_style == 'circle' or block.settings.badge_style == 'square' %}
      max-width: 100%;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      padding: 0 4px;
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .ai-product-badge-wrapper-{{ ai_gen_id }} {
      padding: {{ block.settings.badge_margin | times: 0.75 }}px;
    }
    
    .ai-product-badge-{{ ai_gen_id }} {
      {% if block.settings.badge_style == 'circle' or block.settings.badge_style == 'square' %}
        width: {{ block.settings.badge_size | times: 0.75 }}px;
        height: {{ block.settings.badge_size | times: 0.75 }}px;
      {% else %}
        padding: {{ block.settings.badge_padding | times: 0.75 }}px {{ block.settings.badge_padding | times: 1.2 }}px;
      {% endif %}
    }

    .ai-product-badge-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.badge_font_size | times: 0.75 }}px;
    }
  }
{% endstyle %}

<div class="ai-product-badge-wrapper-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-badge-{{ ai_gen_id }}">
    <span class="ai-product-badge-text-{{ ai_gen_id }}">{{ block.settings.badge_text }}</span>
  </div>
</div>

